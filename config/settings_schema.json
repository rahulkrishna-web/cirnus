  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Font",
        "default": "poppins_n6"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Font",
        "default": "assistant_n4"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "page_width_layout",
        "label": "Layout width",
        "options": [
          {
            "value": "boxed",
            "label": "Boxed"
          },
          {
            "value": "full_width",
            "label": "Full width"
          }
        ],
        "default": "boxed"
      },
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "unit": "px",
        "label": "Page width (Max)",
        "default": 1200,
        "info": "Only applies when layout is 'Boxed'."
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "notification",
            "label": "Notification popup"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "default": false,
        "label": "Enable cart note"
      }
    ]
  },
  {
    "name": "Product Cards",
    "settings": [
      {
        "type": "header",
        "content": "Image"
      },
      {
        "type": "select",
        "id": "image_ratio",
        "label": "Image ratio",
        "options": [
          { "value": "adapt", "label": "Adapt to image" },
          { "value": "portrait", "label": "Portrait (2:3)" },
          { "value": "square", "label": "Square (1:1)" }
        ],
        "default": "portrait"
      },
      {
        "type": "checkbox",
        "id": "show_secondary_image",
        "default": false,
        "label": "Show second image on hover"
      },
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "default": false,
        "label": "Show vendor"
      },
      {
        "type": "checkbox",
        "id": "show_rating",
        "default": false,
        "label": "Show rating"
      }
    ]
  },
  {
    "name": "Collection Cards",
    "settings": [
      {
        "type": "select",
        "id": "collection_card_image_ratio",
        "label": "Image ratio",
        "options": [
          { "value": "adapt", "label": "Adapt to image" },
          { "value": "portrait", "label": "Portrait (2:3)" },
          { "value": "square", "label": "Square (1:1)" }
        ],
        "default": "square"
      },
      {
        "type": "select",
        "id": "collection_card_style",
        "label": "Style",
        "options": [
          { "value": "standard", "label": "Standard" },
          { "value": "card", "label": "Card" }
        ],
        "default": "standard"
      }
    ]
  },
  {
    "name": "Blog Cards",
    "settings": [
      {
        "type": "select",
        "id": "blog_card_image_ratio",
        "label": "Image ratio",
        "options": [
          { "value": "adapt", "label": "Adapt to image" },
          { "value": "landscape", "label": "Landscape (3:2)" },
          { "value": "square", "label": "Square (1:1)" }
        ],
        "default": "landscape"
      },
      {
        "type": "checkbox",
        "id": "show_date",
        "default": true,
        "label": "Show date"
      },
      {
        "type": "checkbox",
        "id": "show_author",
        "default": false,
        "label": "Show author"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      { "type": "text", "id": "social_twitter_link", "label": "Twitter", "info": "https://twitter.com/shopify" },
      { "type": "text", "id": "social_facebook_link", "label": "Facebook", "info": "https://facebook.com/shopify" },
      { "type": "text", "id": "social_pinterest_link", "label": "Pinterest", "info": "https://pinterest.com/shopify" },
      { "type": "text", "id": "social_instagram_link", "label": "Instagram", "info": "http://instagram.com/shopify" },
      { "type": "text", "id": "social_tiktok_link", "label": "TikTok", "info": "http://tiktok.com/@shopify" },
      { "type": "text", "id": "social_youtube_link", "label": "YouTube", "info": "https://www.youtube.com/shopify" }
    ]
  },
  {
    "name": "Currency Format",
    "settings": [
        {
            "type": "checkbox",
            "id": "show_currency_codes",
            "label": "Show currency codes",
            "default": true
        }
    ]
  }
]
