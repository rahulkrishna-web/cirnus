<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="canonical" href="{{ canonical_url }}">

    <title>{{ page_title }}</title>

    {{ 'base.css' | asset_url | stylesheet_tag }}
    {{ 'sections.css' | asset_url | stylesheet_tag }}
    <script src="{{ 'app.js' | asset_url }}" defer="defer"></script>

    {%- style -%}
      :root {
        /* Default Scheme (Scheme 1) */
        --color-background: {{ settings.scheme_1_background }};
        --color-text-primary: {{ settings.scheme_1_text }};
        --color-text-secondary: {{ settings.scheme_1_text | color_modify: 'alpha', 0.75 }};
        --color-accent: {{ settings.scheme_1_accent }};
        --color-border: {{ settings.scheme_1_text | color_modify: 'alpha', 0.1 }};
        --color-button: {{ settings.scheme_1_button }};
        --color-button-label: {{ settings.scheme_1_button_label }};
      }

      .color-scheme-1 {
        --color-background: {{ settings.scheme_1_background }};
        --color-text-primary: {{ settings.scheme_1_text }};
        --color-text-secondary: {{ settings.scheme_1_text | color_modify: 'alpha', 0.75 }};
        --color-accent: {{ settings.scheme_1_accent }};
        --color-border: {{ settings.scheme_1_text | color_modify: 'alpha', 0.1 }};
        --color-button: {{ settings.scheme_1_button }};
        --color-button-label: {{ settings.scheme_1_button_label }};
      }

      .color-scheme-2 {
        --color-background: {{ settings.scheme_2_background }};
        --color-text-primary: {{ settings.scheme_2_text }};
        --color-text-secondary: {{ settings.scheme_2_text | color_modify: 'alpha', 0.75 }};
        --color-accent: {{ settings.scheme_2_accent }};
        --color-border: {{ settings.scheme_2_text | color_modify: 'alpha', 0.1 }};
        --color-button: {{ settings.scheme_2_button }};
        --color-button-label: {{ settings.scheme_2_button_label }};
      }

      .color-scheme-3 {
        --color-background: {{ settings.scheme_3_background }};
        --color-text-primary: {{ settings.scheme_3_text }};
        --color-text-secondary: {{ settings.scheme_3_text | color_modify: 'alpha', 0.75 }};
        --color-accent: {{ settings.scheme_3_accent }};
        --color-border: {{ settings.scheme_3_text | color_modify: 'alpha', 0.1 }};
        --color-button: {{ settings.scheme_3_button }};
        --color-button-label: {{ settings.scheme_3_button_label }};
      }

        /* Typography - Font Loading */
        {%- assign header_font = settings.type_header_font -%}
        {%- assign body_font = settings.type_body_font -%}

        --font-heading-family: {{ header_font.family }}, {{ header_font.fallback_families }};
        --font-body-family: {{ body_font.family }}, {{ body_font.fallback_families }};

        --font-body-weight: {{ body_font.weight }};
        --font-heading-weight: {{ header_font.weight }};

        --font-scale-heading: {{ settings.heading_scale | divided_by: 100.0 }};
        --font-scale-body: {{ settings.body_scale | divided_by: 100.0 }};

        /* Layout */
        --page-width: {{ settings.page_width }}px;
      }

      {%- if settings.page_width_layout == 'full_width' -%}
        :root { --page-width: 100%; }
      {%- endif -%}

      {{ header_font | font_face: font_display: 'swap' }}
      {{ body_font | font_face: font_display: 'swap' }}
    {%- endstyle -%}

    {{ content_for_header }}
  </head>

  <body class="color-scheme-1">
    {% sections 'header-group' %}

    <main id="MainContent" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}
  </body>
</html>
